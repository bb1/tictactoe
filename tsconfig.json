{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "rootDir": ".",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "baseUrl": "."
    },
    "filesGlob": [
      "typings/index.d.ts",
      "backend/**/*.ts",
      "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "exclude": [
      "build",
      "dist",
      "node_modules",
      "__tests__",
      "frontend"
    ],
    "types": [
      "node",
      "webpack"
    ],
    "include": [
      "**/*.ts",
      "backend/game-server/app.js"
    ],
    "compileOnSave": false
  }