{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "jsx": "preserve",
    "rootDir": "../..",
    "outDir": "../../dist/public",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "__tests__",
    "*.test.ts"
  ],
  "types": [
    "node",
    "webpack",
    "react",
    "react-dom",
    "reactstrap"
  ],
  "include": [
    "**/*.ts",
    "src/app.tsx", "src/components/field.tsx", "src/components/tile.tsx", "src/pages/setup.tsx", "src/serviceWorker.js"
  ],
  "compileOnSave": false
}
