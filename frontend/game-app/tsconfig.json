{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "module": "es2015",
      "target": "es2015",
      "jsx": "react",
      "rootDir": "../..",
      "outDir": "../../dist/public",
    },
    "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "exclude": [
      "build",
      "dist",
      "node_modules",
      "__tests__"
    ],
    "types": [
      "node",
      "webpack",
      "react",
      "react-dom",
      "reactstrap"
    ],
    "include": [
      "**/*.ts", "src/app.js"
    ],
    "compileOnSave": false
  }